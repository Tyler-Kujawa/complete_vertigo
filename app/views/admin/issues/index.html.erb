<div class="row">
	<div class="col-lg-12">
		<h1>Issues</h1>

		<table class="table">
		  <thead>
			<tr>
				<th>Series</th>
				<th>Issue Number</th>
				<th>Title</th>
				<th>Publication Date</th>
				<th>Review Author</th>
				<th colspan="3"></th>
			</tr>
		  </thead>

		  <tbody>
			<% @issues.each do |issue| %>
			  <tr>
			  	<td>...series...</td>
			  	<td><%= issue.issue_number %></td>
				<td><%= link_to(issue.title, admin_issue_path(issue)) %></td>
				<td><%= issue.publication_date %></td>
				<td><%= link_to(issue.user.full_name, admin_user_path(issue.user_id)) %></td>
				<td><%= link_to 'Edit', edit_admin_issue_path(issue) %></td>
				<td><%= link_to 'Delete', admin_issue_path(issue), method: :delete, data: { confirm: 'Are you sure?' } %></td>
			  </tr>
			<% end %>
		  </tbody>
		</table>

		<br>

		<%= link_to 'New issue', new_admin_issue_path %>

	</div>
</div>