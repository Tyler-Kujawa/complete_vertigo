<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-lg-12">
		<h2> Profile</h2>
		<hr>

		<p>
			<strong>Name</strong> : <%= @user.full_name %>
		</p>

		<p>
			<strong>Email</strong> : <%= @user.email %>
		</p>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<h4>Articles written by user<h4>

		<% if @user.articles.size > 0 %>
			<table class="table">
			  <thead>
				<tr>
				  <th>Title</th>
				  <th>Date</th>
				  <th colspan="3"></th>
				</tr>
			  </thead>

			  <tbody>
				<% @user.articles.each do |article| %>
				  <tr>
					<td><%= link_to(article.title, admin_article_path(article)) %></td>
					<td>Date goes here</td>
					<td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
					<td><%= link_to 'Delete', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
				  </tr>
				<% end %>
			  </tbody>
			</table>
		<% else %>
			<p>No articles to display</p>
			<p>Publish a new <%=link_to("new article", new_admin_article_path) %></p>
		<% end %>
	</div>
</div>