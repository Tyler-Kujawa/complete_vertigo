<div class="row">
	<div class="col-lg-12">
		<h1>Articles</h1>

		<table class="table">
		  <thead>
			<tr>
				<th>ID</th>
			  <th>Title</th>
			  <th>Author</th>
			  <th colspan="3"></th>
			</tr>
		  </thead>

		  <tbody>
			<% @articles.each do |article| %>
			  <tr>
				<td><%= article.id %></td>
				<td><%= link_to(article.title, admin_article_path(article)) %></td>
				<td><%= link_to(article.user.full_name, admin_user_path(article.user_id)) %></td>
				<td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
				<td><%= link_to 'Delete', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
			  </tr>
			<% end %>
		  </tbody>
		</table>

		<br>

		<%= link_to 'New Article', new_admin_article_path %>

	</div>
</div>