<p id="notice"><%= notice %></p>

<h2>
  <%= @article.title %>
</h2>
<hr>

<p>
  <strong>Author:</strong> <%= @article.user ? @article.user.full_name : "No associated author."%>
</p>
<p>
  <strong>Header Image:</strong>
  <% if !@article.header_image.url.eql?("/header_images/original/missing.png") %>
  	<%= image_tag @article.header_image.url %>
  	<%= link_to 'remove', {action: :remove_header_image, id: @article.id}, method: :patch %>
  <% else %>
  	No Header Image
  <% end %>
</p>

<%= link_to 'Edit', edit_admin_article_path(@article) %> |
<%= link_to 'Back', admin_articles_path %>
