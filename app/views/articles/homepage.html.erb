<!-- START COLUMN 1 -->
<div class="row">
  <div class="newest-article-container">
    <div class="col-md-5 col-md-offset-1">
      <div class="row">
        <div class="col-sm-12">
          <div class="main-article-image-container">
              <%= link_to(image_tag(@newest_article.header_image.url(:large), class: "main-article-image cropped-image-lg"), article_path(@newest_article)) %>  
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <h1 class="main-article-title"><%= link_to @newest_article.title, article_path(@newest_article) %></h1>
          <h3><%= @newest_article.subtitle %></h3>
        </div>
      </div>
      
      <div class="row">
        <div class="col-sm-9">
        <h5 class="text-left extra-small">
          <i><%= @newest_article.user.full_name %></i> - <span class="text-muted"><%= @newest_article.created_at.strftime("%e.%-m.%y")%></span>
        </h5>   
        </div>
        <div class="col-sm-3">
          <div class="comment-count">
          <a href="<%= url_for(@newest_article) %>#disqus_thread">0 Comments</a>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <p><%= truncate(@newest_article.content, length: 450) %> <%= link_to "Read More", article_path(@newest_article) %> </p>   
        </div>
      </div>

      <br><br>
      
      <div class="row">
        <div class="col-sm-12">
          <h4 class="header">Archive Updates</h4>
          <ul class="update-column-list">
            <li>Place for update one to go</li>
            <li>Place for update to go</li>
            <li>Place for update to go</li>
            <li>Place for update to go</li>
            <li>Place for update to go</li>
            <li>Place for update to go</li>
          </ul>
          <%= link_to("Go to Archive", "#") %>
        </div>
      </div>
      
      <br>

    </div>
  </div>
<!-- END COLUMN 1 -->

<!-- START COLUMN 2 -->
  <div class="col-md-2">
    <% @articles.each do |article| %>
      <div class="older-article-container">
        <div class="older-article-container-image">
          <%= link_to(image_tag(article.header_image.url(:large), class: "older-article-image cropped-image-md"), article_path(article)) %>
        </div>
        <h4 class=><%=link_to article.title, article_path(article) %></h4>
        <h5 class="small-date-and-publisher">
          <%= article.user.last_name %>-
          <span class="text-muted "><%= article.created_at.strftime("%e.%-m.%y")%></span>-
          <span><a href="<%= url_for(article) %>#disqus_thread">0 Comments</a></span>  
        </h5>
      </div>
    <% end %>
    
    <br>

    <%=link_to("See More", articles_path) %>
  </div>
<!-- END COLUMN 2 -->

<!-- COLUMN 3 -->
  <div class="col-md-3">
    <div class="well">
      <h4 class="header text-center">Newest Releases<h4>

      <hr>
      <br>

      <% @new_issues.each do |issue| %>
        <div class="row">
          <div class="col-sm-4">
            <%= image_tag issue.cover_image.url, class: "cropped-image-sm-cover" %>
          </div>

           <div class="col-sm-8">
            <div class="new-issue">
              <h5 class="new-issue-title">...series... <%= issue.issue_number %></h5>
              <p><%= truncate(issue.summary, length: 75) %></p>
              
              <h5 class="small-date-and-publisher in-well">
                <span class="special-text-in-well"><i><%= issue.user.last_name %></i></span> - <span class="text-muted"><%= issue.created_at.strftime("%e.%-m.%y")%></span>  
              </h5>
            </div>
          </div>

        </div>
      <% end %>

      <br>

      <p class="text-right"><a class="btn btn-default">See More</a></p>

    </div>

    <div class="well well-alt">
      <div class="form-group">
        <%= form_tag("subscriber/register", method: "get") do %>
          <h1 class="text-center header">
            <%= label_tag(:q, "Subscribe") %>
          </h1>

          <hr>

          <p class="text-center emphasis subscribe-email-message">
            Get updates whenever updates are to be had.
          </p>
          
          <p>
            <%= text_field_tag(:q, "", class: "text-center form-control subscribe-email-field", placeholder: "Email") %>
          </p>
          
          <div class="text-center">
            <%= submit_tag("Do It", class: "btn btn-primary")%> 
          </div>
        <% end %>
      </div>
    </div>

  </div>
  <!-- END COLUMN 3 -->
  <!-- START COLUMN 4 -->
  <div class="col-md-1"></div>
  <!-- END COLUMN 4 -->
</div>